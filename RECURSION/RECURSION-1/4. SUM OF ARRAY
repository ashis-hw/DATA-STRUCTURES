/*==========================================EXAMPLE=======================================================*/
 
                    


/*=============================================CODE=========================================================*/

public class Solution {

    static int suma(int[] arr, int si){
		if(si == arr.length-1){
			return arr[si];
		}
		return arr[si]+suma(arr,si+1);

	}
	public static int sum(int input[]) { 
	    return suma(input,0);	
	}
}



